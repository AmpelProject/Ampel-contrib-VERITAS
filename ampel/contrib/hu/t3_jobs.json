{
    "CosmologySummary": {
      "active": true,
      "schedule": "every().day.at('13:00')",
      "onError": {
        "sendMail": {
          "to": "ztf-software@desy.de",
          "excStack": true
        },
        "stopAmpel": false,
        "retry": false
      },
      "input": {
        "select": {
          "created" : {
                "after" : {
                    "use": "$timeDelta",
                    "arguments" : {
                        "days": -40
                    }
                }
            },
            "modified" : {
                "after" : {
                    "use": "$timeDelta",
                    "arguments" : {
                        "days": -1
                    }
                }
            },
            "channel(s)": [
              "HU_GP_CLEAN"
            ],
            "withFlag(s)": "INST_ZTF",
            "withoutFlag(s)": "HAS_ERROR"
        },
        "load": {
          "state": "$latest",
          "doc(s)": [
            "TRANSIENT",
            "COMPOUND",
            "T2RECORD",
            "PHOTOPOINT"
          ],
          "t2(s)": [
            "SNCOSMO",
            "CATALOGMATCH"
          ],
          "verbose": true
        },
        "chunk": 200
      },
      "task(s)": [
        {
          "name": "HUCleanToSlack",
          "t3Unit": "SlackSummaryPublisher",
          "runConfig": "HUCleanToSlack",
          "updateJournal": false,
          "select": {
            "channel(s)": [
              "HU_GP_CLEAN"
            ],
            "state(s)": "$latest",
            "t2(s)": [
              "SNCOSMO",
              "CATALOGMATCH"
            ]
          }
        },
        {
          "name" : "Fredrik",
          "t3Unit" : "MarshalPublisher",
          "runConfig" : "test",
          "updateJournal" : false,
          "select" : {
            "state" : "$latest",
            "channel(s)" : [
              "HU_GP_CLEAN"
            ]
          }
        }
      ]
    },

